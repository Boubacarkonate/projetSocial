{% extends 'base.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
    <h1>Cv index</h1>

    <div class="table-responsive">
        <table class="table ">
            <thead>
                <tr>
                    <th>Job</th>
                    <th>Created_at</th>
                    <th>Updated_at</th>
                    <th>Cv_candidat</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for moncv in cv %}
                    <tr>
                        <td>{{ moncv.job }}</td>
                        <td>{{ moncv.createdAt ? moncv.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ moncv.updatedAt ? moncv.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ moncv.cvCandidat }}</td>
                        <td>
                            <a href="{{ path('app_cv_show', {'id': moncv.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_cv_edit', {'id': moncv.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <p>  <a href=" {{ path('app_area_candidat') }}">Retournez dans votre espace</a> </p>


{% endblock %}
