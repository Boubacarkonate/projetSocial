{% extends 'base.html.twig' %}

{% block title %}Hello CvthequeController!{% endblock %}

{% block body %}
<h1>Cvtheque</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    {% for cv in cvs %}
    <div class="col">
        <div class="card" style="width: 18rem;">
            <img src="{{ asset('media/cvModel.png') }}" class="card-img-top" alt="photo cv">
            <div class="card-body">
                <h5 class="card-title"> {{ cv.job }}</h5>  {#l'id sera enlevé #}
                <p class="card-text">Catégorie : {{ cv.categorie }}</p>
                <a href="{{ asset('uploads/' ~ cv.cvCandidat ) }}" class="btn btn-primary">Voir Cv</a>
            </div>
        </div> 
    </div>
    {% endfor %}
</div>
{{ dump() }}
{% endblock %}
