{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="bodyFormulaire">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="formulaire">
        <div class="container">
        <h1 class="h3 mb-3 font-weight-normal text-white">BIENVENUE</h1>
        <label for="inputEmail"></label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" class="form-control rounded-pill mt-3" autocomplete="email" required autofocus>
        <label for="inputPassword"></label>
        <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control rounded-pill mt-4" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
    
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="d-grid gap-2 col-12 mx-auto py-4 ">
    <button class="btn btn-dark rounded-pill " type="submit">
        Sign in
    </button>
</div>
</form>

<p class="log mx-auto"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a></p>
<p class="log mx-auto"><a href="{{ path('app_register') }}">Créez un compte !</a></p>
</div>
</div>
</div>
{% endblock %}
